<?page title="Ayuda" contentType="text/html;charset=UTF-8"?>
<zk>
	<window title="Ayuda" border="normal" width="710px" height="600px"
		closable="true">
		<caption>
		<!--toolbarbutton id="btnPrintHelp" image="/imgs/print.png" tooltiptext="Descargar ayuda">
